<Window x:Class="HexaFlow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HexaFlow"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        xmlns:md="clr-namespace:MdXaml;assembly=MdXaml"
        Title="HexaFlow"
        Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen"
        Background="#F9FAFB"
        AllowsTransparency="True"
        WindowStyle="None"
        Icon="Resources/app.ico"
        ResizeMode="CanResizeWithGrip">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CornerRadius="7"
            GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- 侧边栏折叠动画 -->
        <Storyboard x:Key="CollapseSideBarStoryboard">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SideBarColumn"
                                           Storyboard.TargetProperty="Width"
                                           Duration="0:0:0.3">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.3">
                    <DiscreteObjectKeyFrame.Value>
                        <GridLength>0</GridLength>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
            <!-- 同时扩展主内容区域 -->
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MainContentColumn"
                                           Storyboard.TargetProperty="Width"
                                           Duration="0:0:0.3">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.3">
                    <DiscreteObjectKeyFrame.Value>
                        <GridLength>*</GridLength>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
            <!-- 同时调整标题栏左边距 -->
            <ThicknessAnimation Storyboard.TargetName="TitleBarPanel"
                                Storyboard.TargetProperty="Margin"
                                To="20,0,0,0"
                                Duration="0:0:0.3"
                                AccelerationRatio="0.5"
                                DecelerationRatio="0.5" />
        </Storyboard>

        <!-- 侧边栏展开动画 -->
        <Storyboard x:Key="ExpandSideBarStoryboard">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SideBarColumn"
                                           Storyboard.TargetProperty="Width"
                                           Duration="0:0:0.3">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.3">
                    <DiscreteObjectKeyFrame.Value>
                        <GridLength>300</GridLength>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
            <!-- 同时收缩主内容区域 -->
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MainContentColumn"
                                           Storyboard.TargetProperty="Width"
                                           Duration="0:0:0.3">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.3">
                    <DiscreteObjectKeyFrame.Value>
                        <GridLength>*</GridLength>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
            <!-- 同时调整标题栏左边距 -->
            <ThicknessAnimation Storyboard.TargetName="TitleBarPanel"
                                Storyboard.TargetProperty="Margin"
                                To="320,0,0,0"
                                Duration="0:0:0.3"
                                AccelerationRatio="0.5"
                                DecelerationRatio="0.5" />
        </Storyboard>

        <!-- 箭头翻转动画 -->
        <Storyboard x:Key="FlipArrowStoryboard">
            <DoubleAnimation Storyboard.TargetName="ToggleIcon"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                             To="-180"
                             Duration="0:0:0.3"
                             AccelerationRatio="0.5"
                             DecelerationRatio="0.5" />
        </Storyboard>

        <!-- 箭头翻转回来动画 -->
        <Storyboard x:Key="FlipArrowBackStoryboard">
            <DoubleAnimation Storyboard.TargetName="ToggleIcon"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                             To="0"
                             Duration="0:0:0.3"
                             AccelerationRatio="0.5"
                             DecelerationRatio="0.5" />
        </Storyboard>

        <!-- 右侧配置面板折叠动画 -->
        <Storyboard x:Key="CollapseConfigPanelStoryboard">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ConfigPanelColumn"
                                           Storyboard.TargetProperty="Width"
                                           Duration="0:0:0.3">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.3">
                    <DiscreteObjectKeyFrame.Value>
                        <GridLength>0</GridLength>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
            <!-- 同时扩展主内容区域 -->
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MainContentColumn"
                                           Storyboard.TargetProperty="Width"
                                           Duration="0:0:0.3">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.3">
                    <DiscreteObjectKeyFrame.Value>
                        <GridLength>*</GridLength>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

        <!-- 右侧配置面板展开动画 -->
        <Storyboard x:Key="ExpandConfigPanelStoryboard">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ConfigPanelColumn"
                                           Storyboard.TargetProperty="Width"
                                           Duration="0:0:0.3">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.3">
                    <DiscreteObjectKeyFrame.Value>
                        <GridLength>250</GridLength>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
            <!-- 同时收缩主内容区域 -->
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MainContentColumn"
                                           Storyboard.TargetProperty="Width"
                                           Duration="0:0:0.3">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.3">
                    <DiscreteObjectKeyFrame.Value>
                        <GridLength>*</GridLength>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

        <!-- 右侧箭头翻转动画 -->
        <Storyboard x:Key="FlipConfigArrowStoryboard">
            <DoubleAnimation Storyboard.TargetName="ConfigToggleIcon"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                             To="-180"
                             Duration="0:0:0.3"
                             AccelerationRatio="0.5"
                             DecelerationRatio="0.5" />
        </Storyboard>

        <!-- 右侧箭头翻转回来动画 -->
        <Storyboard x:Key="FlipConfigArrowBackStoryboard">
            <DoubleAnimation Storyboard.TargetName="ConfigToggleIcon"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                             To="0"
                             Duration="0:0:0.3"
                             AccelerationRatio="0.5"
                             DecelerationRatio="0.5" />
        </Storyboard>
    </Window.Resources>

    <Grid>
        <!-- 侧边栏（可展示/隐藏） -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SideBarColumn" Width="300" MinWidth="0" MaxWidth="500" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition x:Name="MainContentColumn" Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition x:Name="ConfigPanelColumn" Width="250" MinWidth="0" MaxWidth="350" />
        </Grid.ColumnDefinitions>

        <!-- 标题栏 -->
        <Grid Height="68" VerticalAlignment="Top" Background="#1A365D" Grid.ColumnSpan="6">
            <Grid.Effect>
                <DropShadowEffect Color="#1A365D" BlurRadius="8" ShadowDepth="3" Direction="270" Opacity="0.3" />
            </Grid.Effect>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- 应用图标 -->
            <Image x:Name="AppIcon" Grid.Column="0" Width="32" Height="32"
                   Source="/Resources/app.ico" VerticalAlignment="Center"
                   HorizontalAlignment="Left" Margin="20,0,0,0" />

            <!-- 标题 + 当前模型名 + 拖动区域 -->
            <Grid x:Name="TitleBarPanel" Grid.Column="0" VerticalAlignment="Center" Margin="320,0,0,0"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="AI Chat "
                               Foreground="#FFFFFF"
                               FontSize="18"
                               FontWeight="SemiBold" />
                    <TextBlock x:Name="CurrentModelTextBlock"
                               Text="聊天助手"
                               FontSize="18"
                               Foreground="#8B5CF6"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Grid>

            <!-- 窗口控制按钮 -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="─" Width="50" Height="68" Click="MinimizeButton_Click"
                        BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Foreground" Value="#EFE6D0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="0"
                                                Padding="10">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2D2D30" />
                                    <Setter Property="Foreground" Value="#FFFFFF" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="□" Width="50" Height="68" Click="MaximizeButton_Click"
                        BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Foreground" Value="#EFE6D0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="0"
                                                Padding="10">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2D2D30" />
                                    <Setter Property="Foreground" Value="#FFFFFF" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="×" Width="50" Height="68" Click="CloseButton_Click"
                        BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Foreground" Value="#EFE6D0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="0"
                                                Padding="10">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E81123" />
                                    <Setter Property="Foreground" Value="#FFFFFF" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 侧边栏 -->
        <Grid Grid.Column="0" Background="#F9FAFB" Margin="0,68,0,0">
            <Border CornerRadius="7,0,0,7" Background="#F9FAFB"
                    BorderBrush="#E2E8F0" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60" />   <!-- 模型选择区 -->
                        <RowDefinition Height="*" />    <!-- 对话记录区 -->
                        <RowDefinition Height="Auto" /> <!-- 模型管理按钮区 -->
                    </Grid.RowDefinitions>

                    <!-- 模型选择下拉框 -->
                    <ComboBox x:Name="ModelComboBox"
                              Grid.Row="0"
                              Margin="15,10"
                              FontSize="14"
                              Background="#EFE6D0"
                              Foreground="#1A365D"
                              BorderBrush="#E2E8F0"
                              SelectionChanged="ModelComboBox_SelectionChanged">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Grid>
                                                <ToggleButton x:Name="ToggleButton"
                                                              Background="{TemplateBinding Background}"
                                                              BorderBrush="{TemplateBinding BorderBrush}"
                                                              BorderThickness="1"
                                                              IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                                              ClickMode="Press">
                                                    <ToggleButton.Style>
                                                        <Style TargetType="ToggleButton">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="ToggleButton">
                                                                        <Border x:Name="Border"
                                                                                CornerRadius="7"
                                                                                Background="{TemplateBinding Background}"
                                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                                BorderThickness="1">
                                                                            <Grid>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="*" />
                                                                                    <ColumnDefinition Width="20" />
                                                                                </Grid.ColumnDefinitions>
                                                                                <ContentPresenter Grid.Column="0"
                                                                                    Margin="6,3,0,3"
                                                                                    VerticalAlignment="Center"
                                                                                    HorizontalAlignment="Left"
                                                                                    TextBlock.Foreground="{TemplateBinding Foreground}" />
                                                                                <Path Grid.Column="1"
                                                                                    Data="M0,0 L0,2 L4,6 L8,2 L8,0 L4,4 z"
                                                                                    Fill="{TemplateBinding Foreground}"
                                                                                    HorizontalAlignment="Center"
                                                                                    VerticalAlignment="Center" />
                                                                            </Grid>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver"
                                                                                    Value="True">
                                                                                <Setter TargetName="Border"
                                                                                    Property="Background"
                                                                                    Value="#D6D3D1" />
                                                                            </Trigger>
                                                                            <Trigger Property="IsPressed" Value="True">
                                                                                <Setter TargetName="Border"
                                                                                    Property="Background"
                                                                                    Value="#C1BDB9" />
                                                                            </Trigger>
                                                                            <Trigger Property="IsChecked" Value="True">
                                                                                <Setter TargetName="Border"
                                                                                    Property="Background"
                                                                                    Value="#C1BDB9" />
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </ToggleButton.Style>
                                                </ToggleButton>
                                                <ContentPresenter x:Name="ContentSite"
                                                                  IsHitTestVisible="False"
                                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                  Margin="6,3,23,3"
                                                                  VerticalAlignment="Center"
                                                                  HorizontalAlignment="Left"
                                                                  TextBlock.Foreground="{TemplateBinding Foreground}" />
                                                <Popup x:Name="Popup"
                                                       Placement="Bottom"
                                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                                       AllowsTransparency="True"
                                                       Focusable="False"
                                                       PopupAnimation="Slide">
                                                    <Grid x:Name="DropDown"
                                                          SnapsToDevicePixels="True"
                                                          MinWidth="{TemplateBinding ActualWidth}"
                                                          MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                        <Border x:Name="DropDownBorder"
                                                                Background="#FFFFFF"
                                                                BorderThickness="1"
                                                                BorderBrush="#FFFFFF"
                                                                CornerRadius="7" />
                                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                            <StackPanel IsItemsHost="True"
                                                                        KeyboardNavigation.DirectionalNavigation="Contained" />
                                                        </ScrollViewer>
                                                    </Grid>
                                                </Popup>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="HasItems" Value="false">
                                                    <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95" />
                                                </Trigger>
                                                <Trigger Property="IsGrouping" Value="true">
                                                    <Setter Property="ScrollViewer.CanContentScroll" Value="false" />
                                                </Trigger>
                                                <Trigger SourceName="Popup" Property="AllowsTransparency" Value="true">
                                                    <Setter TargetName="DropDownBorder" Property="CornerRadius"
                                                            Value="7" />
                                                    <Setter TargetName="DropDownBorder" Property="Margin"
                                                            Value="0,2,0,0" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>

                    <!-- 对话历史标签 -->
                    <TextBlock Grid.Row="1" Text="对话历史列表" Margin="15,10,15,5" Foreground="#1A365D" FontSize="14"
                               FontWeight="SemiBold" />
                    <!-- 对话记录列表 -->
                    <ListBox x:Name="ChatHistoryListBox"
                             Grid.Row="1"
                             Margin="15,35,15,10"
                             Background="#F9FAFB"
                             BorderBrush="#EFE6D0"
                             BorderThickness="1"
                             Foreground="#1A365D"
                             FontSize="14"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             SelectionChanged="ChatHistoryListBox_SelectionChanged">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="5,2" />
                                <Setter Property="Padding" Value="12,8" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Foreground" Value="#1A365D" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="7"
                                                    Padding="{TemplateBinding Padding}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <ContentPresenter Grid.Column="0" TextElement.Foreground="{TemplateBinding Foreground}" />
                                                    <Button Grid.Column="1"
                                                            x:Name="DeleteSessionButton"
                                                            Content="×"
                                                            Background="Transparent"
                                                            Foreground="#1A365D"
                                                            BorderThickness="0"
                                                            Padding="5,0"
                                                            Margin="5,0,0,0"
                                                            FontSize="16"
                                                            Click="DeleteSessionButton_Click"
                                                            Tag="{Binding Id}" />
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#EFE6D0" />
                                                    <Setter Property="Foreground" Value="#1A365D" />
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="DeleteSessionButton"
                                                                                 Storyboard.TargetProperty="Opacity"
                                                                                 To="1" Duration="0:0:0.2" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="DeleteSessionButton"
                                                                                 Storyboard.TargetProperty="Opacity"
                                                                                 To="0" Duration="0:0:0.2" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#EFE6D0" />
                                                    <Setter Property="BorderBrush" Value="#8B5CF6" />
                                                    <Setter Property="BorderThickness" Value="1" />
                                                    <Setter Property="Foreground" Value="#8B5CF6" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" 
                                               Text="{Binding Title}" 
                                               FontWeight="SemiBold"
                                               TextTrimming="CharacterEllipsis" />
                                    <TextBlock Grid.Row="1" 
                                               Text="{Binding UpdatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" 
                                               FontSize="12"
                                               Opacity="0.7" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- 按钮容器 -->
                    <Grid Grid.Row="2" Margin="15,15,15,5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="5" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- 新建会话按钮 -->
                        <Button x:Name="NewChatButton"
                                Grid.Row="0"
                                Height="45"
                                Background="#8B5CF6"
                                Foreground="#EFE6D0"
                                BorderThickness="0"
                                Content="新建会话"
                                FontSize="14"
                                FontWeight="Medium"
                                Click="NewChatButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="7"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#7C3AED" />
                                                        <Setter Property="Foreground" Value="#FFFFFF" />
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#6D28D9" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- 模型管理按钮 -->
                            <Button x:Name="ModelManagerButton"
                                    Grid.Column="0"
                                    Margin="0,0,5,0"
                                    Height="45"
                                    Background="#1A365D"
                                    Foreground="#EFE6D0"
                                    BorderThickness="0"
                                    Content="模型管理"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Click="ModelManagerButton_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="7"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center" />
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#D6D3D1" />
                                                            <Setter Property="Foreground" Value="#4A453F" />
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter Property="Background" Value="#C1BDB9" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- 系统设置按钮 -->
                            <Button x:Name="SystemSettingsButton"
                                    Grid.Column="1"
                                    Margin="5,0,0,0"
                                    Height="45"
                                    Background="#8B5CF6"
                                    Foreground="#EFE6D0"
                                    BorderThickness="0"
                                    Content="系统设置"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Click="SystemSettingsButton_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="7"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center" />
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#D6D3D1" />
                                                            <Setter Property="Foreground" Value="#4A453F" />
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter Property="Background" Value="#C1BDB9" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- 分隔条 -->
        <!-- 分隔条和折叠按钮容器 -->
        <Grid Grid.Column="1" Width="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="68" /> <!-- 标题栏高度 -->
                <RowDefinition Height="60" /> <!-- 下拉框高度区域 -->
                <RowDefinition Height="*" /> <!-- 其余区域 -->
            </Grid.RowDefinitions>

            <!-- 分隔条 -->
            <GridSplitter Grid.Row="1"
                          VerticalAlignment="Center"
                          Width="5"
                          HorizontalAlignment="Center"
                          Background="Transparent"
                          ShowsPreview="False" />

            <!-- 折叠按钮 -->
            <Button x:Name="ToggleButton"
                    Grid.Row="1"
                    Width="20"
                    Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,0,0,0"
                    Background="#8B5CF6"
                    BorderThickness="0"
                    Click="ToggleButton_Click">
                <Button.Content>
                    <TextBlock x:Name="ToggleIcon" Text="◀" FontSize="12" Foreground="#EFE6D0">
                        <TextBlock.RenderTransform>
                            <RotateTransform CenterX="6" CenterY="6" />
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </Button.Content>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="0,7,7,0"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#D6D3D1" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#C1BDB9" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- 右侧分隔条和折叠按钮容器 -->
        <Grid Grid.Column="3" Width="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="68" /> <!-- 标题栏高度 -->
                <RowDefinition Height="60" /> <!-- 下拉框高度区域 -->
                <RowDefinition Height="*" /> <!-- 其余区域 -->
            </Grid.RowDefinitions>

            <!-- 分隔条 -->
            <GridSplitter Grid.Row="1"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Stretch"
                          Width="5"
                          Background="Transparent"
                          BorderThickness="0"
                          ShowsPreview="False" />

            <!-- 折叠按钮 -->
            <Button Grid.Row="1"
                    Width="20"
                    Height="40"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Background="#8B5CF6"
                    BorderThickness="0"
                    Click="ConfigToggleButton_Click">
                <Button.Content>
                    <TextBlock x:Name="ConfigToggleIcon" Text="▶" FontSize="12" Foreground="#EFE6D0">
                        <TextBlock.RenderTransform>
                            <RotateTransform CenterX="6" CenterY="6" />
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </Button.Content>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="7,0 ,0, 7"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#D6D3D1" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#C1BDB9" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- 主内容区 -->
        <Grid Grid.Column="2" Margin="0,68,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- 聊天记录区 -->
            <Border CornerRadius="7"
                    Margin="0, 5"
                    Background="#F9FAFB" BorderThickness="0">
                <ScrollViewer x:Name="ChatScrollViewer"
                              VerticalScrollBarVisibility="Auto"
                              Padding="5"
                              Margin="5"
                              Background="#F9FAFB">
                    <ItemsControl x:Name="ChatItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type local:ChatMessage}">
                                <Border Margin="10,15"
                                        Padding="18,14"
                                        CornerRadius="7"
                                        MaxWidth="700"
                                        HorizontalAlignment="{Binding Alignment}"
                                        Background="{Binding BubbleBackground}">
                                    <Border.Effect>
                                        <DropShadowEffect Color="{Binding ShadowColor}"
                                                          BlurRadius="25"
                                                          ShadowDepth="5"
                                                          Opacity="0.6" />
                                    </Border.Effect>
                                    <md:MarkdownScrollViewer 
                                        Markdown="{Binding Content}"
                                        FontSize="16"
                                        FontFamily="Microsoft YaHei UI"
                                        Foreground="#1A365D"
                                        VerticalScrollBarVisibility="Disabled"
                                        HorizontalAlignment="Stretch">
                                        <md:MarkdownScrollViewer.Resources>
                                            <Style TargetType="Paragraph">
                                                <Setter Property="Margin" Value="0"/>
                                                <Setter Property="FontFamily" Value="Microsoft YaHei UI"/>
                                            </Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontFamily" Value="Microsoft YaHei UI"/>
                                            </Style>
                                            <Style TargetType="Run">
                                                <Setter Property="FontFamily" Value="Microsoft YaHei UI"/>
                                            </Style>
                                        </md:MarkdownScrollViewer.Resources>
                                    </md:MarkdownScrollViewer>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- 输入区 -->
            <Grid Grid.Row="1" Margin="0,20,0,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox x:Name="UserInput"
                         Grid.Column="0"
                         FontSize="16"
                         Padding="20,14"
                         Margin="0,0,15,0"
                         ui:ControlHelper.CornerRadius="7"
                         ui:ControlHelper.PlaceholderText="输入消息，按 Enter 发送，Ctrl+Enter 换行..."
                         ui:ControlHelper.PlaceholderForeground="#C0BAB3"
                         KeyDown="UserInput_KeyDown"
                         AcceptsReturn="False"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto" >
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="25"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <Button Grid.Column="1"
                        
                        Padding="36,14"
                        Background="#8B5CF6"
                        Foreground="#FFFFFF"
                        FontSize="16"
                        Click="SendButton_Click"
                        ui:ControlHelper.CornerRadius="7" >
                
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>

                    <!-- 纸飞机图标 -->
                    <Viewbox Width="20" Height="20" RenderTransformOrigin="0.5,0.5">
                        <Viewbox.RenderTransform>
                            <RotateTransform Angle="-45"/>
                        </Viewbox.RenderTransform>
                        <Path Data="M 2 0 L 22 11 L 2 22 L 6 11 Z M 2 0 L 10 8 L 22 11" 
                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                              Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                              StrokeThickness="1"/>
                    </Viewbox>
                </Button>
            </Grid>
        </Grid>

        <!-- 右侧配置面板 -->
        <Grid Grid.Column="4" Background="#F9FAFB" Margin="0,68,0,0">
            <Border CornerRadius="0,7,7,0" Background="#F9FAFB"
                    BorderBrush="#EFE6D0" BorderThickness="1,0,0,0">
                <Grid Margin="15,15,15,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />   <!-- 参数区 -->
                        <RowDefinition Height="*" />    <!-- 提示区 -->
                    </Grid.RowDefinitions>

                    <!-- 参数区 -->
                    <Border Grid.Row="0" Background="#FFFFFF" CornerRadius="12" Margin="0,0,0,15" Padding="20" 
                            BorderBrush="#E2E8F0" BorderThickness="1">
                        <StackPanel>
                            <!-- 标题 -->
                            <TextBlock Text="参数设置" FontSize="16" FontWeight="Medium" Foreground="#1A365D" 
                                       Margin="0,0,0,20" />
                            
                            <!-- 温度参数 -->
                            <Border Background="#F8FAFC" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                                        <TextBlock Text="温度" FontSize="14" FontWeight="Medium" Foreground="#334155" />
                                        <TextBlock Text="控制随机性" FontSize="12" Foreground="#64748B" Margin="5,0,0,0" />
                                    </StackPanel>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Slider Grid.Column="0" x:Name="TemperatureSlider" Minimum="0" Maximum="2" Value="0.7"
                                                Height="24" VerticalAlignment="Center"
                                                ValueChanged="ParameterSlider_ValueChanged" />
                                        <Border Grid.Column="1" Background="#FFFFFF" CornerRadius="6" Padding="8,4" 
                                                MinWidth="45" Margin="10,0,0,0" BorderBrush="#CBD5E1" BorderThickness="1">
                                            <TextBlock x:Name="TemperatureValueText" Text="0.7" 
                                                       Foreground="#0F172A" FontSize="14" FontWeight="Medium" 
                                                       HorizontalAlignment="Center" />
                                        </Border>
                                    </Grid>
                                </Grid>
                            </Border>
                            
                            <!-- 种子参数 -->
                            <Border Background="#F8FAFC" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                                        <TextBlock Text="种子" FontSize="14" FontWeight="Medium" Foreground="#334155" />
                                        <TextBlock Text="控制随机种子" FontSize="12" Foreground="#64748B" Margin="5,0,0,0" />
                                    </StackPanel>
                                    <TextBox Grid.Row="1" x:Name="SeedTextBox" Height="32"
                                             Background="#FFFFFF" BorderBrush="#CBD5E1"
                                             Foreground="#0F172A" FontSize="14" Padding="8,6"
                                             Text="-1" />
                                </Grid>
                            </Border>
                            
                            <!-- top_P参数 -->
                            <Border Background="#F8FAFC" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                                        <TextBlock Text="top_P" FontSize="14" FontWeight="Medium" Foreground="#334155" />
                                        <TextBlock Text="核采样概率" FontSize="12" Foreground="#64748B" Margin="5,0,0,0" />
                                    </StackPanel>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Slider Grid.Column="0" x:Name="TopPSlider" Minimum="0" Maximum="1" Value="0.9"
                                                Height="24" VerticalAlignment="Center"
                                                ValueChanged="ParameterSlider_ValueChanged" />
                                        <Border Grid.Column="1" Background="#FFFFFF" CornerRadius="6" Padding="8,4" 
                                                MinWidth="45" Margin="10,0,0,0" BorderBrush="#CBD5E1" BorderThickness="1">
                                            <TextBlock x:Name="TopPValueText" Text="0.9" 
                                                       Foreground="#0F172A" FontSize="14" FontWeight="Medium" 
                                                       HorizontalAlignment="Center" />
                                        </Border>
                                    </Grid>
                                </Grid>
                            </Border>
                            
                            <!-- top_K参数 -->
                            <Border Background="#F8FAFC" CornerRadius="8" Padding="16">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,8">
                                        <TextBlock Text="top_K" FontSize="14" FontWeight="Medium" Foreground="#334155" />
                                        <TextBlock Text=" 保留最高概率词数" FontSize="12" Foreground="#64748B" Margin="5,0,0,0" />
                                    </StackPanel>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Slider Grid.Column="0" x:Name="TopKSlider" Minimum="1" Maximum="100" Value="40"
                                                Height="24" VerticalAlignment="Center"
                                                ValueChanged="ParameterSlider_ValueChanged" />
                                        <Border Grid.Column="1" Background="#FFFFFF" CornerRadius="6" Padding="8,4" 
                                                MinWidth="45" Margin="10,0,0,0" BorderBrush="#CBD5E1" BorderThickness="1">
                                            <TextBlock x:Name="TopKValueText" Text="40" 
                                                       Foreground="#0F172A" FontSize="14" FontWeight="Medium" 
                                                       HorizontalAlignment="Center" />
                                        </Border>
                                    </Grid>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- 系统提示词标题 -->
                    <TextBlock Grid.Row="1" Text="系统提示词"
                               Foreground="#0F172A" FontSize="16" FontWeight="SemiBold"
                               Margin="0,0,0,5" />
                    <TextBlock Grid.Row="1" Text="(系统提示，用于控制AI的行为)"
                               Foreground="#64748B" FontSize="12"
                               Margin="0,26,0,10" />

                    <!-- 系统提示词列表 -->
                    <ListBox Grid.Row="1" x:Name="SystemPromptListBox"
                             Background="#FFFFFF" BorderBrush="#CBD5E1"
                             Foreground="#0F172A" FontSize="14"
                             Padding="5" MinHeight="100" Margin="0,50,0,0"
                             BorderThickness="1"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="10,8" />
                                <Setter Property="Margin" Value="0,1" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Foreground" Value="#0F172A" />
                                <EventSetter Event="MouseDoubleClick" Handler="SystemPromptItem_MouseDoubleClick" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter TextElement.Foreground="{TemplateBinding Foreground}" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F1F5F9" />
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#E2E8F0" />
                                                    <Setter Property="BorderBrush" Value="#6366F1" />
                                                    <Setter Property="BorderThickness" Value="1" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBoxItem Content="默认助手" />
                        <ListBoxItem Content="编程助手" />
                        <ListBoxItem Content="创意写作助手" />
                        <ListBoxItem Content="学术研究助手" />
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>