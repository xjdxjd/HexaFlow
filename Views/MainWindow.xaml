<Window x:Class="HexaFlow.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HexaFlow.Views"
        mc:Ignorable="d"
        Title="HexaFlow" 
        Height="720" 
        Width="1280"
        MinHeight="600"
        MinWidth="1024"
        Background="{StaticResource MainBackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部标题栏 -->
        <Border Grid.Row="0" Background="{StaticResource HeaderBackgroundBrush}" CornerRadius="0" Padding="16,8"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 应用图标 -->
                <Image Grid.Column="0" 
                       Source="/Resources/app.ico" 
                       Width="32" 
                       Height="32" 
                       Margin="16,0,5,0"/>

                <!-- 应用标题 -->
                <TextBlock Grid.Column="1" 
                           Text="HexaFlow" 
                           FontSize="{StaticResource LargeTitleFontSize}"
                           FontWeight="Medium"
                           Foreground="{StaticResource PrimaryTextBrush}"
                           VerticalAlignment="Center"/>

                <!-- 当前模型显示 -->
                <Button Grid.Column="2" 
                        Content="当前模型: [模型名称]" 
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="{StaticResource SecondaryTextBrush}"
                        FontSize="16"
                        Padding="12,6"
                        Margin="0,0,16,0"
                        VerticalAlignment="Center"/>

                <!-- 窗口控制按钮 -->
                <StackPanel Grid.Column="3" 
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Button Name="MinimizeButton"
                            Style="{StaticResource TitleBarButtonStyle}" 
                            Content="&#xE921;" 
                            FontFamily="Segoe MDL2 Assets"/>
                    <Button Name="MaximizeButton"
                            Style="{StaticResource TitleBarButtonStyle}" 
                            Content="&#xE922;" 
                            FontFamily="Segoe MDL2 Assets"/>
                    <Button Name="CloseButton"
                            Style="{StaticResource TitleBarButtonStyle}" 
                            Content="&#xE8BB;" 
                            FontFamily="Segoe MDL2 Assets"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 主内容区 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="56" x:Name="LeftColumn"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="360" MinWidth="56" x:Name="RightColumn"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧功能区 -->
            <Border Grid.Column="0" Margin="12,12,6,12"
                    Background="{StaticResource SidePanelBackgroundBrush}" 
                    CornerRadius="{StaticResource LargeCornerRadius}" 
                    Padding="{StaticResource DefaultThickness}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="120"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="80"/>
                    </Grid.RowDefinitions>

                    <!-- 模型选择区 -->
                    <Border Grid.Row="0" 
                            Background="{StaticResource SidePanelBackgroundBrush}" 
                            CornerRadius="{StaticResource LargeCornerRadius}" 
                            Padding="{StaticResource DefaultThickness}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="选择模型" 
                                       FontWeight="Medium"
                                       FontSize="{StaticResource TitleFontSize}"
                                       Margin="0,0,0,12"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox Grid.Column="0" 
                                          Height="36"
                                          Style="{StaticResource JadeComboBoxStyle}"/>

                                <Button Grid.Column="1" 
                                        Style="{StaticResource JadeButtonStyle}"
                                        Width="36"
                                        Height="36"
                                        Margin="8,0,0,0"
                                        Content="&#xE72C;" 
                                        FontFamily="Segoe MDL2 Assets"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- 历史记录列表 -->
                    <Border Grid.Row="1" 
                            Background="{StaticResource SidePanelBackgroundBrush}" 
                            CornerRadius="{StaticResource LargeCornerRadius}" 
                            Padding="{StaticResource DefaultThickness}"
                            Margin="0,12,0,12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- 工具栏 -->
                            <Grid Grid.Row="0" Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" 
                                        Style="{StaticResource JadeButtonStyle}"
                                        Content="新建会话"/>

                                <Button Grid.Column="1" 
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Width="36"
                                        Height="36"
                                        Margin="8,0,0,0"
                                        Content="&#xE721;" 
                                        FontFamily="Segoe MDL2 Assets"/>

                                <Button Grid.Column="2" 
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Width="36"
                                        Height="36"
                                        Margin="8,0,0,0"
                                        Content="&#xE8F6;" 
                                        FontFamily="Segoe MDL2 Assets"/>
                            </Grid>

                            <!-- 会话列表 -->
                            <ListBox Grid.Row="1" Style="{StaticResource JadeListBoxStyle}">
                                <ListBoxItem>
                                    <StackPanel>
                                        <TextBlock Text="会话标题1" FontWeight="Medium"/>
                                        <TextBlock Text="会话预览内容..." 
                                                   FontSize="12"
                                                   Foreground="{StaticResource SecondaryTextBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="2023-06-15 14:30" 
                                                   FontSize="11"
                                                   Foreground="{StaticResource SecondaryTextBrush}"/>
                                    </StackPanel>
                                </ListBoxItem>
                                <ListBoxItem>
                                    <StackPanel>
                                        <TextBlock Text="会话标题2" FontWeight="Medium"/>
                                        <TextBlock Text="会话预览内容..." 
                                                   FontSize="12"
                                                   Foreground="{StaticResource SecondaryTextBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="2023-06-15 10:20" 
                                                   FontSize="11"
                                                   Foreground="{StaticResource SecondaryTextBrush}"/>
                                    </StackPanel>
                                </ListBoxItem>
                            </ListBox>
                        </Grid>
                    </Border>

                    <!-- 入口按钮区 -->
                    <Border Grid.Row="2" 
                            Background="{StaticResource SidePanelBackgroundBrush}" 
                            CornerRadius="{StaticResource LargeCornerRadius}" 
                            Padding="{StaticResource DefaultThickness}">
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center">
                            <Button Style="{StaticResource JadeButtonStyle}"
                                    Margin="0,0,12,0"
                                    Width="120"
                                    Content="系统设置"/>
                            <Button Style="{StaticResource JadeButtonStyle}"
                                    Width="120"
                                    Content="模型管理"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- 中部聊天区 -->
            <Border Grid.Column="1" Margin="6,12,6,12"
                    Background="{StaticResource ChatPanelBackgroundBrush}" 
                    CornerRadius="{StaticResource LargeCornerRadius}" 
                    Padding="{StaticResource DefaultThickness}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 聊天记录区 -->
                    <ScrollViewer Grid.Row="0" 
                                VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Disabled"
                                Margin="0,0,0,20">
                        <StackPanel>
                            <!-- 用户消息 -->
                            <Border Style="{StaticResource UserMessageBubbleStyle}">
                                <TextBlock Text="用户消息内容" TextWrapping="Wrap"/>
                            </Border>

                            <!-- 助手消息 -->
                            <Border Style="{StaticResource AssistantMessageBubbleStyle}">
                                <TextBlock Text="助手回复内容" TextWrapping="Wrap"/>
                            </Border>

                            <!-- 更多消息示例 -->
                            <Border Style="{StaticResource UserMessageBubbleStyle}">
                                <TextBlock Text="这是另一个用户消息" TextWrapping="Wrap"/>
                            </Border>

                            <Border Style="{StaticResource AssistantMessageBubbleStyle}">
                                <TextBlock Text="这是另一个助手回复，支持Markdown格式渲染，可以包含代码块、列表等丰富格式内容。这里展示的是长文本消息的显示效果，气泡会自动适应内容大小。"
                                           TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- 输入浮岛 -->
                    <Border Grid.Row="1"
                            Background="{StaticResource InputPanelBackgroundBrush}" 
                            CornerRadius="{StaticResource LargeCornerRadius}" 
                            Padding="{StaticResource DefaultThickness}"
                            BorderThickness="2"
                            BorderBrush="Transparent"
                            Margin="0,20,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     Style="{StaticResource JadeTextBoxStyle}"
                                     Text="输入消息..."
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     MaxHeight="150"/>

                            <Button Grid.Column="1"
                                    Style="{StaticResource JadeButtonStyle}"
                                    Content="发送"
                                    Width="80"
                                    Height="36"
                                    Margin="12,0,0,0"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- 右侧功能区 -->
            <Border Grid.Column="2" Margin="6,12,12,12"
                    Background="{StaticResource SidePanelBackgroundBrush}" 
                    CornerRadius="{StaticResource LargeCornerRadius}" 
                    Padding="{StaticResource DefaultThickness}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 参数快捷设置区 -->
                    <Border Grid.Row="0" 
                            Background="{StaticResource SidePanelBackgroundBrush}" 
                            CornerRadius="{StaticResource LargeCornerRadius}" 
                            Padding="{StaticResource DefaultThickness}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="参数设置" 
                                       FontWeight="Medium"
                                       FontSize="{StaticResource TitleFontSize}"
                                       Margin="0,0,0,16"/>

                            <StackPanel Grid.Row="1">
                                <!-- Temperature 参数 -->
                                <StackPanel Margin="0,0,0,16">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                   Text="Temperature" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,12,0"/>

                                        <Slider Grid.Column="1" 
                                                Minimum="0" 
                                                Maximum="2" 
                                                Value="0.7"
                                                VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="2" 
                                                   Text="0.7" 
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0"
                                                   MinWidth="30"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Top_P 参数 -->
                                <StackPanel Margin="0,0,0,16">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                   Text="Top_P" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,12,0"/>

                                        <Slider Grid.Column="1" 
                                                Minimum="0" 
                                                Maximum="1" 
                                                Value="0.9"
                                                VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="2" 
                                                   Text="0.9" 
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0"
                                                   MinWidth="30"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Top_K 参数 -->
                                <StackPanel Margin="0,0,0,16">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                   Text="Top_K" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,12,0"/>

                                        <Slider Grid.Column="1" 
                                                Minimum="1" 
                                                Maximum="100" 
                                                Value="40"
                                                VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="2" 
                                                   Text="40" 
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0"
                                                   MinWidth="30"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Seed 参数 -->
                                <StackPanel Margin="0,0,0,16">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                   Text="Seed" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,12,0"/>

                                        <TextBox Grid.Column="1" 
                                                 Style="{StaticResource JadeTextBoxStyle}"
                                                 Text="0"
                                                 Height="36"/>
                                    </Grid>
                                </StackPanel>

                                <!-- 应用按钮 -->
                                <Button Style="{StaticResource JadeButtonStyle}"
                                        Content="应用设置"
                                        Width="120"
                                        HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- 系统提示词列表区 -->
                    <Border Grid.Row="1" 
                            Background="{StaticResource SidePanelBackgroundBrush}" 
                            CornerRadius="{StaticResource LargeCornerRadius}" 
                            Padding="{StaticResource DefaultThickness}"
                            Margin="0,12,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="系统提示词" 
                                       FontWeight="Medium"
                                       FontSize="{StaticResource TitleFontSize}"
                                       Margin="0,0,0,16"/>

                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- 工具栏 -->
                                <Grid Grid.Row="0" Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0" 
                                            Style="{StaticResource JadeButtonStyle}"
                                            Content="新建提示词"/>

                                    <Button Grid.Column="1" 
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Width="36"
                                            Height="36"
                                            Margin="8,0,0,0"
                                            Content="&#xE8F6;" 
                                            FontFamily="Segoe MDL2 Assets"/>
                                </Grid>

                                <!-- 提示词列表 -->
                                <ListBox Grid.Row="1" Style="{StaticResource JadeListBoxStyle}">
                                    <ListBoxItem>
                                        <StackPanel>
                                            <TextBlock Text="默认助手" FontWeight="Medium"/>
                                            <TextBlock Text="你是一个有用的助手，请用简洁、准确的语言回答用户的问题。" 
                                                       FontSize="12"
                                                       Foreground="{StaticResource SecondaryTextBrush}"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        <StackPanel>
                                            <TextBlock Text="代码助手" FontWeight="Medium"/>
                                            <TextBlock Text="你是一个专业的编程助手，擅长多种编程语言，能够提供代码示例和解决方案。" 
                                                       FontSize="12"
                                                       Foreground="{StaticResource SecondaryTextBrush}"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        <StackPanel>
                                            <TextBlock Text="创意助手" FontWeight="Medium"/>
                                            <TextBlock Text="你是一个富有创造力的助手，能够提供创新的想法和解决方案。" 
                                                       FontSize="12"
                                                       Foreground="{StaticResource SecondaryTextBrush}"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </ListBoxItem>
                                </ListBox>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>