<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 标题样式（通过 Run 的 FontWeight/FontSize 判断，或用 BasedOn 隐式应用） -->
    <!-- MdXaml 会为不同级别标题应用不同 FontWeight/Size，我们用触发器区分 -->
    <Style TargetType="Paragraph">
        <Setter Property="Margin" Value="0,0,0,19.2"/>
        <Setter Property="LineHeight" Value="1.8"/>
        <Setter Property="FontFamily" Value="-apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif"/>
        <Style.Triggers>
            <!-- H1 -->
            <Trigger Property="FontSize" Value="35.2">
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="#2C3E50"/>
                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                <Setter Property="Padding" Value="0,0,0,8"/>
            </Trigger>
            <!-- H2 -->
            <Trigger Property="FontSize" Value="28.8">
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="#5E9ED6"/>
                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                <Setter Property="Padding" Value="0,0,0,4.8"/>
            </Trigger>
            <!-- H3 -->
            <Trigger Property="FontSize" Value="24">
                <Setter Property="Foreground" Value="#26A69A"/>
            </Trigger>
            <!-- H4 -->
            <Trigger Property="FontSize" Value="20.8">
                <Setter Property="Foreground" Value="#2C3E50"/>
            </Trigger>
            <!-- H5 -->
            <Trigger Property="FontSize" Value="18.4">
                <Setter Property="Foreground" Value="#546E7A"/>
            </Trigger>
            <!-- H6 -->
            <Trigger Property="FontSize" Value="16">
                <Setter Property="Foreground" Value="#546E7A"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Span">  <!-- 行内代码 -->
        <Setter Property="Background" Value="#F8F8F8"/>
        <!-- <Setter Property="BorderBrush" Value="#E0E0E0"/> -->
        <!-- <Setter Property="BorderThickness" Value="1"/> -->
        <!-- <Setter Property="Padding" Value="3.2,4.8"/> -->
        <Setter Property="FontFamily" Value="'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', monospace"/>
        <Setter Property="Foreground" Value="#37474F"/>
    </Style>

    <!-- 列表 -->
    <Style TargetType="List">
        <Setter Property="Margin" Value="0,0,0,19.2"/>
        <Setter Property="Padding" Value="32,0,0,0"/>
    </Style>

    <!-- 引用块 -->
    <Style TargetType="Section">  <!-- 引用块也是 Section -->
        <Setter Property="Background" Value="#F8F8F8"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="24,0"/>
        <Setter Property="Margin" Value="0,0,0,19.2"/>
        <Setter Property="FontFamily" Value="'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', monospace"/>
        <Setter Property="Foreground" Value="#37474F"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding FontStyle}" Value="Italic">
                <Setter Property="BorderThickness" Value="4,0,0,0"/>
                <Setter Property="BorderBrush" Value="#5E9ED6"/>
                <Setter Property="Background" Value="#F5F5F5"/>
                <Setter Property="Padding" Value="16,24"/>
                <Setter Property="Margin" Value="0,0,0,19.2"/>
                <Setter Property="Foreground" Value="#546E7A"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- 链接 -->
    <Style TargetType="Hyperlink">
        <Setter Property="Foreground" Value="#5E9ED6"/>
        <Setter Property="TextDecorations" Value="None"/>
    </Style>

    <!-- 表格（MdXaml 支持有限，可用 Table Style） -->
    <Style TargetType="Table">
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="0,0,0,32"/>
    </Style>
    <Style TargetType="TableCell">
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="0,0,1,1"/>
        <Setter Property="Padding" Value="12,16"/>
    </Style>
</ResourceDictionary>