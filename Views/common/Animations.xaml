<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 淡入动画 -->
    <Storyboard x:Key="FadeInAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0" To="1" 
                         Duration="{StaticResource NormalAnimation}">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- 淡出动画 -->
    <Storyboard x:Key="FadeOutAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="1" To="0" 
                         Duration="{StaticResource NormalAnimation}">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseIn"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- 缩放动画 (悬停效果) -->
    <Storyboard x:Key="ScaleUpAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                         From="1.0" To="1.03" 
                         Duration="{StaticResource FastAnimation}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                         From="1.0" To="1.03" 
                         Duration="{StaticResource FastAnimation}"/>
    </Storyboard>

    <!-- 缩放还原动画 -->
    <Storyboard x:Key="ScaleDownAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                         From="1.03" To="1.0" 
                         Duration="{StaticResource FastAnimation}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                         From="1.03" To="1.0" 
                         Duration="{StaticResource FastAnimation}"/>
    </Storyboard>

    <!-- 上移动画 -->
    <Storyboard x:Key="SlideUpAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                         From="20" To="0" 
                         Duration="{StaticResource NormalAnimation}">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- 下移动画 -->
    <Storyboard x:Key="SlideDownAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                         From="0" To="20" 
                         Duration="{StaticResource NormalAnimation}">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseIn"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- 宽度变化动画 (用于侧边栏折叠) -->
    <Storyboard x:Key="WidthCollapseAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Width"
                         From="300" To="56" 
                         Duration="{StaticResource SlowAnimation}">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- 宽度恢复动画 -->
    <Storyboard x:Key="WidthExpandAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Width"
                         From="56" To="300" 
                         Duration="{StaticResource SlowAnimation}">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
</ResourceDictionary>