<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 主色调 - 玉质感冷白青 -->
    <SolidColorBrush x:Key="MainBackgroundBrush" Color="#F0F5F9"/>
    <SolidColorBrush x:Key="AlternativeMainBackgroundBrush" Color="#F2F8FA"/>
    <SolidColorBrush x:Key="SecondaryMainBackgroundBrush" Color="#E8F0F5"/>

    <!-- 渐变背景 -->
    <LinearGradientBrush x:Key="MainBackgroundGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#F0F5F9" Offset="0.0"/>
        <GradientStop Color="#E8EFF5" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- 组件背景 -->
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#FFFFFF" Opacity="0.30"/>
    <SolidColorBrush x:Key="FloatingPanelBackgroundBrush" Color="#FFFFFF" Opacity="0.32"/>
    <SolidColorBrush x:Key="SidePanelBackgroundBrush" Color="#FFFFFF" Opacity="0.28"/>
    <SolidColorBrush x:Key="ChatPanelBackgroundBrush" Color="#FFFFFF" Opacity="0.32"/>
    <SolidColorBrush x:Key="InputPanelBackgroundBrush" Color="#FFFFFF" Opacity="0.38"/>
    <SolidColorBrush x:Key="UserMessageBackgroundBrush" Color="#E8F0F5" Opacity="0.9"/>
    <SolidColorBrush x:Key="AssistantMessageBackgroundBrush" Color="#FFFFFF" Opacity="0.92"/>
    <SolidColorBrush x:Key="ListItemBackgroundBrush" Color="#FFFFFF" Opacity="0.25"/>
    <SolidColorBrush x:Key="ListItemHoverBackgroundBrush" Color="#D4E4ED"/>
    <SolidColorBrush x:Key="ListItemSelectedBackgroundBrush" Color="#5B8A9B" Opacity="0.2"/>
    <SolidColorBrush x:Key="DialogBackgroundBrush" Color="#FFFFFF" Opacity="0.35"/>

    <!-- 主色调按钮 -->
    <SolidColorBrush x:Key="PrimaryButtonBrush" Color="#5B8A9B"/>
    <SolidColorBrush x:Key="PrimaryButtonHoverBrush" Color="#6B98A8"/>
    <SolidColorBrush x:Key="PrimaryButtonPressedBrush" Color="#4B7A8B"/>

    <!-- 文本颜色 -->
    <!-- <SolidColorBrush x:Key="PrimaryTextBrush" Color="#1F2A44"/> -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#0C2664"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#6B8299"/>
    <SolidColorBrush x:Key="AccentTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="AccentTextTransparentBrush" Color="#FFFFFF" Opacity="0.9"/>

    <!-- 语义色 -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#4A937A"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#C19A5B"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#A14A5C"/>

    <!-- 焦点和发光效果 -->
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#5B8A9B"/>
    <SolidColorBrush x:Key="InputGlowBrush" Color="#5B8A9B" Opacity="0.5"/>
</ResourceDictionary>