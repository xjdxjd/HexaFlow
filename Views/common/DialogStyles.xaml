<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 基础对话框样式 -->
    <Style x:Key="BaseDialogWindowStyle" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource DialogBackgroundBrush}"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="ShowInTaskbar" Value="False"/>
        <Setter Property="Topmost" Value="True"/>
        <Setter Property="WindowStartupLocation" Value="CenterOwner"/>
    </Style>

    <!-- 成功对话框样式 -->
    <Style x:Key="SuccessDialogStyle" TargetType="Window" BasedOn="{StaticResource BaseDialogWindowStyle}">
        <Setter Property="Title" Value="成功"/>
        <Setter Property="Width" Value="400"/>
        <Setter Property="Height" Value="200"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Window">
                    <Border x:Name="WindowBorder" 
                            Background="{TemplateBinding Background}"
                            CornerRadius="{StaticResource DefaultCornerRadius}"
                            BorderThickness="1"
                            BorderBrush="{StaticResource SuccessBrush}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 顶部提示条 -->
                            <Rectangle Grid.Row="0" Fill="{StaticResource SuccessBrush}"/>

                            <!-- 图标和标题 -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="16,20,16,16">
                                <TextBlock Text="✓" 
                                           FontSize="24"
                                           Foreground="{StaticResource SuccessBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,16,0"/>
                                <TextBlock x:Name="TitleTextBlock"
                                           Text="操作成功"
                                           FontSize="18"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- 消息内容 -->
                            <TextBlock x:Name="MessageTextBlock"
                                       Grid.Row="2"
                                       Text="操作已成功完成。"
                                       FontSize="{StaticResource DefaultFontSize}"
                                       Foreground="{StaticResource PrimaryTextBrush}"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Top"
                                       Margin="16,0,16,16"/>

                            <!-- 确认按钮 -->
                            <Button x:Name="OKButton"
                                    Grid.Row="3"
                                    Style="{StaticResource JadeButtonStyle}"
                                    Content="确定"
                                    Width="100"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,16"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 警告对话框样式 -->
    <Style x:Key="WarningDialogStyle" TargetType="Window" BasedOn="{StaticResource BaseDialogWindowStyle}">
        <Setter Property="Title" Value="警告"/>
        <Setter Property="Width" Value="400"/>
        <Setter Property="Height" Value="220"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Window">
                    <Border x:Name="WindowBorder" 
                            Background="{TemplateBinding Background}"
                            CornerRadius="{StaticResource DefaultCornerRadius}"
                            BorderThickness="1"
                            BorderBrush="{StaticResource WarningBrush}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 顶部提示条 -->
                            <Rectangle Grid.Row="0" Fill="{StaticResource WarningBrush}"/>

                            <!-- 图标和标题 -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="16,20,16,16">
                                <TextBlock Text="⚠" 
                                           FontSize="24"
                                           Foreground="{StaticResource WarningBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,16,0"/>
                                <TextBlock x:Name="TitleTextBlock"
                                           Text="警告"
                                           FontSize="18"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- 消息内容 -->
                            <TextBlock x:Name="MessageTextBlock"
                                       Grid.Row="2"
                                       Text="此操作可能存在风险，是否继续？"
                                       FontSize="{StaticResource DefaultFontSize}"
                                       Foreground="{StaticResource PrimaryTextBrush}"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Top"
                                       Margin="16,0,16,16"/>

                            <!-- 按钮区 -->
                            <StackPanel Grid.Row="3" 
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Center" 
                                        Margin="0,0,0,16">
                                <Button x:Name="CancelButton"
                                        Style="{StaticResource JadeButtonStyle}"
                                        Content="取消"
                                        Width="100"
                                        Margin="0,0,12,0"/>
                                <Button x:Name="ConfirmButton"
                                        Style="{StaticResource JadeButtonStyle}"
                                        Content="确认"
                                        Width="100"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 错误对话框样式 -->
    <Style x:Key="ErrorDialogStyle" TargetType="Window" BasedOn="{StaticResource BaseDialogWindowStyle}">
        <Setter Property="Title" Value="错误"/>
        <Setter Property="Width" Value="400"/>
        <Setter Property="Height" Value="220"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Window">
                    <Border x:Name="WindowBorder" 
                            Background="{TemplateBinding Background}"
                            CornerRadius="{StaticResource DefaultCornerRadius}"
                            BorderThickness="1"
                            BorderBrush="{StaticResource ErrorBrush}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 顶部提示条 -->
                            <Rectangle Grid.Row="0" Fill="{StaticResource ErrorBrush}"/>

                            <!-- 图标和标题 -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="16,20,16,16">
                                <TextBlock Text="✕" 
                                           FontSize="24"
                                           Foreground="{StaticResource ErrorBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,16,0"/>
                                <TextBlock x:Name="TitleTextBlock"
                                           Text="错误"
                                           FontSize="18"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- 消息内容 -->
                            <TextBlock x:Name="MessageTextBlock"
                                       Grid.Row="2"
                                       Text="操作失败，请检查并重试。"
                                       FontSize="{StaticResource DefaultFontSize}"
                                       Foreground="{StaticResource PrimaryTextBrush}"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Top"
                                       Margin="16,0,16,16"/>

                            <!-- 确认按钮 -->
                            <Button x:Name="OKButton"
                                    Grid.Row="3"
                                    Style="{StaticResource JadeButtonStyle}"
                                    Content="确定"
                                    Width="100"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,16"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>