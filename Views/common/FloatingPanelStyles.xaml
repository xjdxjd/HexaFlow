<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 浮岛基础样式 -->
    <Style x:Key="FloatingPanelJadeStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource FloatingPanelBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="{StaticResource LargeCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource DefaultThickness}"/>
    </Style>

    <!-- 侧边栏浮岛样式 -->
    <Style x:Key="SidePanelJadeStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource SidePanelBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="{StaticResource LargeCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource DefaultThickness}"/>
    </Style>

    <!-- 聊天区浮岛样式 -->
    <Style x:Key="ChatPanelJadeStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource ChatPanelBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="{StaticResource LargeCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource DefaultThickness}"/>
    </Style>

    <!-- 输入区浮岛样式 -->
    <Style x:Key="InputPanelJadeStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource InputPanelBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="{StaticResource LargeCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource DefaultThickness}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

    <!-- 用户消息气泡样式 -->
    <Style x:Key="UserMessageBubbleStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource UserMessageBackgroundBrush}"/>
        <Setter Property="CornerRadius">
            <Setter.Value>
                <CornerRadius>16,16,4,16</CornerRadius>
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="Margin" Value="30,8,50,8"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>

    <!-- 助手消息气泡样式 -->
    <Style x:Key="AssistantMessageBubbleStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource AssistantMessageBackgroundBrush}"/>
        <Setter Property="CornerRadius">
            <Setter.Value>
                <CornerRadius>16,16,16,4</CornerRadius>
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="Margin" Value="50,8,30,8"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <!-- 标题栏样式 -->
    <Style x:Key="TitleBarJadeStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource HeaderBackgroundBrush}"/>
        <Setter Property="CornerRadius">
            <Setter.Value>
                <CornerRadius>0</CornerRadius>
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="16,8"/>
    </Style>

    <!-- 标题栏按钮样式 -->
    <Style x:Key="TitleBarButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}">
                        <ContentPresenter x:Name="contentPresenter" HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#dd1019"/>
                            <Setter TargetName="contentPresenter" Property="TextElement.Foreground" Value="#FFFFFF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>