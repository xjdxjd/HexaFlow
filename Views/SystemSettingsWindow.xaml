<Window x:Class="HexaFlow.Views.SystemSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HexaFlow.Views"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        Title="系统设置" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F1F5F9"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip">
    <WindowChrome.WindowChrome>
        <WindowChrome 
            CornerRadius="7"
            GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="Foreground" Value="#0F172A"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="1"
                                          IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border x:Name="Border"
                                                            CornerRadius="7"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="1">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="30" />
                                                            </Grid.ColumnDefinitions>
                                                            <ContentPresenter Grid.Column="0"
                                                                          Margin="10,0,0,0"
                                                                          VerticalAlignment="Center"
                                                                          HorizontalAlignment="Left"
                                                                          TextBlock.Foreground="{TemplateBinding Foreground}" />
                                                            <Path Grid.Column="1"
                                                                  Data="M0,0 L0,2 L4,6 L8,2 L8,0 L4,4 z"
                                                                  Fill="{TemplateBinding Foreground}"
                                                                  HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center" />
                                                        </Grid>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="#F1F5F9" />
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="#E2E8F0" />
                                                        </Trigger>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="#E2E8F0" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                          IsHitTestVisible="False"
                                          Content="{TemplateBinding SelectionBoxItem}"
                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                          ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                          Margin="10,0,0,0"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left"
                                          TextBlock.Foreground="{TemplateBinding Foreground}" />
                            <Border x:Name="DisabledVisualElement"
                                          IsHitTestVisible="False"
                                          Opacity="0"
                                          Grid.ColumnSpan="2"
                                          Background="#A5FFFFFF"
                                          CornerRadius="7"/>
                            <Popup x:Name="PART_Popup"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   PlacementTarget="{Binding ElementName=ToggleButton}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                      SnapsToDevicePixels="True">
                                    <Border x:Name="DropDownBorder"
                                            Background="#FFFFFF"
                                            BorderThickness="1"
                                            BorderBrush="#CBD5E1"
                                            CornerRadius="7"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="False">
                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="DisabledVisualElement" Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="True">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
                            </Trigger>
                            <!-- Arrow rotation removed as it's no longer needed -->
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#94A3B8"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#6366F1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ModernComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F1F5F9"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E2E8F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="68" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Grid Height="68" VerticalAlignment="Top" Background="#FFFFFF" Grid.Row="0">
            <Grid.Effect>
                <DropShadowEffect Color="#E2E8F0" BlurRadius="5" ShadowDepth="2" Direction="270" Opacity="0.5"/>
            </Grid.Effect>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- 标题 -->
            <Grid Grid.Column="0" VerticalAlignment="Center" Margin="20,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="AppIcon" Width="32" Height="32" 
                           Source="/Resources/app.ico" VerticalAlignment="Center" 
                           HorizontalAlignment="Left" Margin="0,0,10,0" />
                    <TextBlock Text="系统设置"
                               Foreground="#0F172A"
                               FontSize="18"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- 窗口控制按钮 -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="─" Width="50" Height="68" Click="MinimizeButton_Click"
                        Background="Transparent" Foreground="#64748B" BorderThickness="0"/>
                <Button Content="□" Width="50" Height="68" Click="MaximizeButton_Click"
                        Background="Transparent" Foreground="#64748B" BorderThickness="0"/>
                <Button Content="×" Width="50" Height="68" Click="CloseButton_Click"
                        Background="Transparent" Foreground="#64748B" BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E81123"/>
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 设置内容区 -->
        <Grid Grid.Row="1" Margin="30,30,30,30">
            <Border CornerRadius="7" Background="#FFFFFF" BorderBrush="#E2E8F0" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="30,30,30,30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- 第一部分：主题与语言 -->
                    <Border Grid.Row="0" Background="#F9FAFB" CornerRadius="8" Margin="0,10,0,10" Padding="20">
                        <StackPanel>
                            <TextBlock Text="主题与语言" FontSize="16" FontWeight="Medium" Foreground="#8B5CF6" Margin="0,0,0,15" />
                            
                            <!-- 主题设置 -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="主题设置："
                                           Foreground="#0F172A" FontSize="14" FontWeight="Medium"
                                           VerticalAlignment="Center" Margin="0,0,20,0" />
                                <ComboBox Grid.Column="1" x:Name="ThemeComboBox"
                                          Style="{StaticResource ModernComboBoxStyle}"
                                          ItemContainerStyle="{StaticResource ModernComboBoxItemStyle}"
                                          Background="#F8FAFC" BorderBrush="#CBD5E1"
                                          Foreground="#0F172A" FontSize="14" Height="40">
                                    <ComboBoxItem Content="国风主题" IsSelected="True" />
                                    <ComboBoxItem Content="现代简约" />
                                    <ComboBoxItem Content="暗夜模式" />
                                </ComboBox>
                            </Grid>
                            
                            <!-- 语言设置 -->
                            <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="语言设置：" 
                                   Foreground="#0F172A" FontSize="16" FontWeight="Medium" 
                                   VerticalAlignment="Center" Margin="0,0,20,0" />
                        <ComboBox Grid.Column="1" x:Name="LanguageComboBox"
                                  Style="{StaticResource ModernComboBoxStyle}"
                                  ItemContainerStyle="{StaticResource ModernComboBoxItemStyle}"
                                  Background="#F8FAFC" BorderBrush="#CBD5E1" 
                                  Foreground="#0F172A" FontSize="14" Height="40">
                            <ComboBoxItem Content="简体中文" IsSelected="True" />
                            
                            <!--
                            <ComboBoxItem Content="繁體中文" />
                            <ComboBoxItem Content="English" />
                            <ComboBoxItem Content="日本語" />
                            -->
                            
                            </ComboBox>
                            </Grid>

                            <!-- 字体设置 -->
                            <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="字体设置：" 
                                   Foreground="#0F172A" FontSize="16" FontWeight="Medium" 
                                   VerticalAlignment="Center" Margin="0,0,20,0" />
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <ComboBox x:Name="FontFamilyComboBox"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      ItemContainerStyle="{StaticResource ModernComboBoxItemStyle}"
                                      Background="#F8FAFC" BorderBrush="#CBD5E1" 
                                      Foreground="#0F172A" FontSize="14" Height="40" Width="200" Margin="0,0,10,0">
                                <ComboBoxItem Content="HarmonyOS Sans SC" IsSelected="True" />
                                <ComboBoxItem Content="微软雅黑" />
                                <ComboBoxItem Content="宋体" />
                                <ComboBoxItem Content="黑体" />
                                <ComboBoxItem Content="Arial" />
                                <ComboBoxItem Content="Consolas" />
                            </ComboBox>
                            <ComboBox x:Name="FontSizeComboBox"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      ItemContainerStyle="{StaticResource ModernComboBoxItemStyle}"
                                      Background="#F8FAFC" BorderBrush="#CBD5E1" 
                                      Foreground="#0F172A" FontSize="14" Height="40" Width="100">
                                <ComboBoxItem Content="12" />
                                <ComboBoxItem Content="14" IsSelected="True" />
                                <ComboBoxItem Content="16" />
                                <ComboBoxItem Content="18" />
                                <ComboBoxItem Content="20" />
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                        </StackPanel>
                    </Border>

                    <!-- 第二部分：文件保存位置 -->
                    <Border Grid.Row="1" Background="#F9FAFB" CornerRadius="8" Margin="0,10,0,10" Padding="20">
                        <StackPanel>
                            <TextBlock Text="文件保存位置" FontSize="16" FontWeight="Medium" Foreground="#8B5CF6" Margin="0,0,0,15" />
                            
                            <!-- 模型保存位置 -->
                            <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="模型保存位置：" 
                                   Foreground="#0F172A" FontSize="16" FontWeight="Medium" 
                                   VerticalAlignment="Center" Margin="0,0,20,0" />
                        <TextBox Grid.Column="1" x:Name="ModelPathTextBox"
                                 Background="#F8FAFC" BorderBrush="#CBD5E1" 
                                 Foreground="#0F172A" FontSize="14" Height="40"
                                 VerticalContentAlignment="Center"
                                 Padding="10,0"
                                 Text="D:\HexaFlow\Models" />
                        <Button Grid.Column="2" Content="浏览..." 
                                Background="#F8FAFC" Foreground="#0F172A"
                                BorderBrush="#CBD5E1" BorderThickness="1" Height="40" Width="80"
                                Click="BrowseModelPathButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="7"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F1F5F9"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#E2E8F0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        </Grid>
                            
                            <!-- 系统提示词保存位置 -->
                            <Grid Margin="0,15,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="系统提示词位置："
                                           Foreground="#0F172A" FontSize="14" FontWeight="Medium"
                                           VerticalAlignment="Center" Margin="0,0,20,0" />
                                <TextBox Grid.Column="1" x:Name="SysPromptsPathTextBox"
                                         Background="#F8FAFC" BorderBrush="#CBD5E1"
                                         Foreground="#0F172A" FontSize="14" Height="40"
                                         VerticalContentAlignment="Center"
                                         Padding="10,0"
                                         Text="D:\HexaFlow\SysPrompts" />
                                <Button Grid.Column="2" Content="浏览..."
                                        Background="#F8FAFC" Foreground="#0F172A"
                                        BorderBrush="#CBD5E1" BorderThickness="1" Height="40" Width="80"
                                        Click="BrowseSysPromptsPathButton_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="7"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#F1F5F9"/>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter Property="Background" Value="#E2E8F0"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- 第三部分：其他设置 -->
                    <Border Grid.Row="2" Background="#F9FAFB" CornerRadius="8" Margin="0,10,0,10" Padding="20">
                        <StackPanel>
                            <TextBlock Text="其他设置" FontSize="16" FontWeight="Medium" Foreground="#8B5CF6" Margin="0,0,0,15" />
                            
                            <!-- 其他设置项 -->
                            <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- 自动更新 -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="自动更新：" 
                                       Foreground="#0F172A" FontSize="16" FontWeight="Medium" 
                                       VerticalAlignment="Center" Margin="0,0,20,0" />
                            <CheckBox Grid.Column="1" x:Name="AutoUpdateCheckBox"
                                      Content="自动检查并安装更新" IsChecked="True"
                                      Foreground="#0F172A" FontSize="14" />
                        </Grid>

                        <!-- 启动时最小化 -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="启动行为：" 
                                       Foreground="#0F172A" FontSize="16" FontWeight="Medium" 
                                       VerticalAlignment="Center" Margin="0,0,20,0" />
                            <CheckBox Grid.Column="1" x:Name="MinimizeOnStartCheckBox"
                                      Content="启动时最小化到托盘" IsChecked="False"
                                      Foreground="#0F172A" FontSize="14" />
                        </Grid>
                        </Grid>
                        </StackPanel>
                    </Border>

                    <!-- 底部按钮区 -->
                    <Grid Grid.Row="3" Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1" Content="重置默认" 
                                Background="#F8FAFC" Foreground="#0F172A"
                                BorderBrush="#CBD5E1" BorderThickness="1" Height="40" Width="100" Margin="0,0,10,0"
                                Click="ResetDefaultButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="7"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F1F5F9"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#E2E8F0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Grid.Column="2" Content="保存设置" Visibility="Collapsed" 
                                Background="#6366F1" Foreground="#FFFFFF"
                                BorderThickness="0" Height="40" Width="100"
                                Click="SaveSettingsButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="7"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#5558DD"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#4447CC"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>