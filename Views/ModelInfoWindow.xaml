<Window x:Class="HexaFlow.Views.ModelInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HexaFlow.Views"
        mc:Ignorable="d"
        Title="模型详情" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 模型名称 -->
        <Border Grid.Row="0" Background="White" Padding="15" CornerRadius="7" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="ModelNameTextBlock" Text="模型名称" 
                           FontSize="18" FontWeight="Bold" Foreground="#333"/>

                <Button Grid.Column="1" Content="关闭" Width="80" Height="30"
                        Background="#F44336" Foreground="White" BorderThickness="0" 
                        Cursor="Hand" Click="CloseButton_Click"/>
            </Grid>
        </Border>

        <!-- 模型详细信息 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 基本信息 -->
                <Border Background="White" Padding="15" CornerRadius="7" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="基本信息" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="模型大小:" Margin="0,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="ModelSizeTextBlock" Text="0" Margin="0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="参数量:" Margin="0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="ParameterSizeTextBlock" Text="0" Margin="0,5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="上下文长度:" Margin="0,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ContextLengthTextBlock" Text="0" Margin="0,5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="量化方式:" Margin="0,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="QuantizationLevelTextBlock" Text="未知" Margin="0,5"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="修改日期:" Margin="0,5"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="ModifiedAtTextBlock" Text="未知" Margin="0,5"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="许可证:" Margin="0,5"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" x:Name="LicenseTextBlock" Text="未知" Margin="0,5"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 系统提示 -->
                <Border Background="White" Padding="15" CornerRadius="7" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="系统提示" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBox x:Name="SystemPromptTextBox" Text="无" 
                                 IsReadOnly="True" TextWrapping="Wrap" 
                                 MinHeight="80" MaxHeight="150"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </Border>

                <!-- Modelfile -->
                <Border Background="White" Padding="15" CornerRadius="7" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Modelfile" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBox x:Name="ModelfileTextBox" Text="无" 
                                 IsReadOnly="True" TextWrapping="Wrap" 
                                 MinHeight="100" MaxHeight="200"
                                 VerticalScrollBarVisibility="Auto"
                                 FontFamily="Consolas"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
