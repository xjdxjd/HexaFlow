<Window x:Class="HexaFlow.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HexaFlow.Views"
        mc:Ignorable="d"
        Title="系统设置" 
        Height="500" 
        Width="600"
        Style="{StaticResource BaseDialogWindowStyle}"
        WindowStartupLocation="CenterOwner">

    <Border Background="{StaticResource DialogBackgroundBrush}"
            CornerRadius="{StaticResource DefaultCornerRadius}"
            BorderThickness="1"
            BorderBrush="{StaticResource SecondaryTextBrush}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 选项卡内容 -->
            <TabControl Grid.Row="0" Background="Transparent" BorderThickness="0">
                <TabItem Header="连接设置">
                    <Border Background="{StaticResource FloatingPanelBackgroundBrush}"
                            CornerRadius="{StaticResource DefaultCornerRadius}"
                            Margin="0,10,0,0">
                        <StackPanel Margin="20">
                            <TextBlock Text="API URL" FontWeight="Medium" Margin="0,0,0,8"/>
                            <TextBox x:Name="ApiUrlTextBox" 
                                     Style="{StaticResource JadeTextBoxStyle}"
                                     Text="http://localhost:11434"
                                     Margin="0,0,0,20"/>

                            <CheckBox x:Name="AutoReconnectCheckBox" 
                                      Content="自动重连" 
                                      Margin="0,0,0,20"/>

                            <Button x:Name="TestConnectionButton"
                                    Style="{StaticResource JadeButtonStyle}"
                                    Content="测试连接"
                                    Width="120"
                                    HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>
                </TabItem>

                <TabItem Header="通用设置">
                    <Border Background="{StaticResource FloatingPanelBackgroundBrush}"
                            CornerRadius="{StaticResource DefaultCornerRadius}"
                            Margin="0,10,0,0">
                        <StackPanel Margin="20">
                            <TextBlock Text="主题" FontWeight="Medium" Margin="0,0,0,8"/>
                            <ComboBox x:Name="ThemeComboBox" 
                                      Style="{StaticResource JadeComboBoxStyle}"
                                      Margin="0,0,0,20">
                                <ComboBoxItem Content="玉质感" IsSelected="True"/>
                                <ComboBoxItem Content="深色模式"/>
                                <ComboBoxItem Content="浅色模式"/>
                            </ComboBox>

                            <TextBlock Text="通知设置" FontWeight="Medium" Margin="0,0,0,8"/>
                            <StackPanel Margin="0,0,0,20">
                                <CheckBox Content="启用通知" IsChecked="True" Margin="0,0,0,8"/>
                                <CheckBox Content="声音提醒" IsChecked="True"/>
                            </StackPanel>

                            <TextBlock Text="快捷键" FontWeight="Medium" Margin="0,0,0,8"/>
                            <TextBlock Text="Ctrl+Enter: 发送消息" 
                                       Foreground="{StaticResource SecondaryTextBrush}"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Ctrl+N: 新建会话" 
                                       Foreground="{StaticResource SecondaryTextBrush}"/>
                        </StackPanel>
                    </Border>
                </TabItem>

                <TabItem Header="高级选项">
                    <Border Background="{StaticResource FloatingPanelBackgroundBrush}"
                            CornerRadius="{StaticResource DefaultCornerRadius}"
                            Margin="0,10,0,0">
                        <StackPanel Margin="20">
                            <Button x:Name="ViewLogsButton"
                                    Style="{StaticResource JadeButtonStyle}"
                                    Content="查看日志"
                                    Width="120"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,20"/>

                            <Button x:Name="CheckUpdatesButton"
                                    Style="{StaticResource JadeButtonStyle}"
                                    Content="检查更新"
                                    Width="120"
                                    HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>
                </TabItem>
            </TabControl>

            <!-- 底部按钮 -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,20,0,0">
                <Button x:Name="CancelButton"
                        Style="{StaticResource JadeButtonStyle}"
                        Content="取消"
                        Margin="0,0,12,0"/>
                <Button x:Name="SaveButton"
                        Style="{StaticResource JadeButtonStyle}"
                        Content="保存"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>