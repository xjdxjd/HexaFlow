<Window x:Class="HexaFlow.Views.AddSystemPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="添加系统提示词"
        Height="520" Width="720"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="系统提示词名称"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,8" />

        <TextBox Grid.Row="1"
                 x:Name="PromptNameTextBox"
                 Height="36"
                 VerticalContentAlignment="Center"
                 Text="{Binding PromptName, UpdateSourceTrigger=PropertyChanged}" />

        <Grid Grid.Row="2" Margin="0,16,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="系统提示词内容"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,0,0,8" />

            <TextBox Grid.Row="1"
                     x:Name="PromptContentTextBox"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Text="{Binding PromptContent, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="取消"
                    Width="100"
                    Height="36"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click" />

            <Button Content="添加"
                    Width="100"
                    Height="36"
                    Click="AddButton_Click" />
        </StackPanel>
    </Grid>
</Window>
