<Window x:Class="HexaFlow.Views.NotificationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="通知"
        Width="350"
        Height="150"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="{StaticResource DialogBackgroundBrush}"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Topmost="True">
    
    <Border CornerRadius="{StaticResource DefaultCornerRadius}" 
            BorderThickness="1"
            BorderBrush="{StaticResource SuccessBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="6"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 顶部提示条 -->
            <Rectangle Grid.Row="0" Fill="{StaticResource SuccessBrush}"/>

            <!-- 图标和标题 -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="16,20,16,16">
                <TextBlock Text="ℹ" 
                           FontSize="24"
                           Foreground="{StaticResource SuccessBrush}"
                           VerticalAlignment="Center"
                           Margin="0,0,16,0"/>
                <TextBlock x:Name="TitleTextBlock"
                           Text="提示"
                           FontSize="18"
                           FontWeight="Medium"
                           Foreground="{StaticResource PrimaryTextBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- 消息内容 -->
            <TextBlock x:Name="MessageTextBlock"
                       Grid.Row="2"
                       Text="操作已成功完成。"
                       FontSize="{StaticResource DefaultFontSize}"
                       Foreground="{StaticResource PrimaryTextBrush}"
                       TextWrapping="Wrap"
                       VerticalAlignment="Top"
                       Margin="16,0,16,16"/>

            <!-- 确认按钮 -->
            <Button x:Name="OKButton"
                    Grid.Row="3"
                    Style="{StaticResource JadeButtonStyle}"
                    Content="确定"
                    Width="100"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,16"
                    Click="OKButton_Click"/>
        </Grid>
    </Border>
</Window>