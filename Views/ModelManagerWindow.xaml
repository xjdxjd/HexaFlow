<Window x:Class="HexaFlow.Views.ModelManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HexaFlow.Views"
        mc:Ignorable="d"
        Title="模型管理" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F1F5F9"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CornerRadius="7"
            GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="Foreground" Value="#0F172A"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="1"
                                          IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border x:Name="Border"
                                                            CornerRadius="7"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="1">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="30" />
                                                            </Grid.ColumnDefinitions>
                                                            <ContentPresenter Grid.Column="0"
                                                                          Margin="10,0,0,0"
                                                                          VerticalAlignment="Center"
                                                                          HorizontalAlignment="Left"
                                                                          TextBlock.Foreground="{TemplateBinding Foreground}" />
                                                            <Path Grid.Column="1"
                                                                  Data="M0,0 L0,2 L4,6 L8,2 L8,0 L4,4 z"
                                                                  Fill="{TemplateBinding Foreground}"
                                                                  HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center" />
                                                        </Grid>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="#F1F5F9" />
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="#E2E8F0" />
                                                        </Trigger>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="#E2E8F0" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                          IsHitTestVisible="False"
                                          Content="{TemplateBinding SelectionBoxItem}"
                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                          ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                          Margin="10,0,0,0"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left"
                                          TextBlock.Foreground="{TemplateBinding Foreground}" />
                            <Border x:Name="DisabledVisualElement"
                                          IsHitTestVisible="False"
                                          Opacity="0"
                                          Grid.ColumnSpan="2"
                                          Background="#A5FFFFFF"
                                          CornerRadius="7"/>
                            <Popup x:Name="PART_Popup"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   PlacementTarget="{Binding ElementName=ContentSite}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                      SnapsToDevicePixels="True">
                                    <Border x:Name="DropDownBorder"
                                            Background="#FFFFFF"
                                            BorderThickness="1"
                                            BorderBrush="#CBD5E1"
                                            CornerRadius="7"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="False">
                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="DisabledVisualElement" Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="True">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
                            </Trigger>
                            <!-- Arrow rotation removed as it's no longer needed -->
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#94A3B8"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#6366F1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ModernComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F1F5F9"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E2E8F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CategoryRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" BorderBrush="#CBD5E1" BorderThickness="1"
                                Background="White" CornerRadius="7" Padding="10,5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A6FFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Grid Height="48" VerticalAlignment="Top" Background="Transparent" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- 标题 + 拖动区域 -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <TextBlock Text="模型管理"
                           Foreground="#C0BAB3"
                           FontSize="15"
                           FontWeight="SemiBold"/>
            </StackPanel>

            <!-- 窗口控制按钮 -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="─" Width="50" Height="48" Click="MinimizeButton_Click"
                        Background="Transparent" Foreground="#C0BAB3" BorderThickness="0"/>
                <Button Content="□" Width="50" Height="48" Click="MaximizeButton_Click"
                        Background="Transparent" Foreground="#C0BAB3" BorderThickness="0"/>
                <Button Content="×" Width="50" Height="48" Click="CloseButton_Click"
                        Background="Transparent" Foreground="#C0BAB3" BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E81123"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 顶部工具栏 -->
        <Border Grid.Row="1" Background="White" Padding="10" Margin="0,0,0,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 搜索框 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBox x:Name="SearchTextBox" Width="250" Height="35" Margin="0,0,10,0" 
                             VerticalContentAlignment="Center" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.Template>
                            <ControlTemplate TargetType="TextBox">
                                <Border BorderBrush="#CBD5E1" BorderThickness="1" CornerRadius="7" Background="#FFFFFF">
                                    <Grid>
                                        <TextBlock Text="搜索模型..." Margin="10,0,0,0" VerticalAlignment="Center" 
                                                   Foreground="#94A3B8" Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <ScrollViewer x:Name="PART_ContentHost" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </TextBox.Template>
                    </TextBox>
                    <Button x:Name="SearchButton" Content="搜索" Width="80" Height="35" 
                            Background="#6366F1" Foreground="White" BorderThickness="0" 
                            Cursor="Hand" Click="SearchButton_Click"/>
                </StackPanel>

                <!-- 分类标签 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                    <RadioButton Content="全部" Margin="5,0" IsChecked="True" Style="{StaticResource CategoryRadioButtonStyle}" 
                                 GroupName="Category" Tag="all"/>
                    <RadioButton Content="对话" Margin="5,0" Style="{StaticResource CategoryRadioButtonStyle}" 
                                 GroupName="Category" Tag="chat"/>
                    <RadioButton Content="代码" Margin="5,0" Style="{StaticResource CategoryRadioButtonStyle}" 
                                 GroupName="Category" Tag="code"/>
                    <RadioButton Content="嵌入" Margin="5,0" Style="{StaticResource CategoryRadioButtonStyle}" 
                                 GroupName="Category" Tag="embed"/>
                </StackPanel>

                <!-- 操作按钮 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="RefreshButton" Content="刷新" Width="80" Height="35" Margin="0,0,10,0"
                            Background="White" BorderBrush="#DDD" Foreground="#333" 
                            Cursor="Hand" Click="RefreshButton_Click"/>
                    <Button x:Name="ImportModelButton" Content="导入模型" Width="100" Height="35"
                            Background="#4CAF50" Foreground="White" BorderThickness="0" 
                            Cursor="Hand" Click="ImportModelButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 主体内容区域 -->
        <TabControl Grid.Row="2" Margin="0,0,0,5">
            <!-- 官方模型库选项卡 -->
            <TabItem Header="模型库">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 排序选项 -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Background="White">
                        <TextBlock Text="排序：" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="SortComboBox" Width="150" Style="{StaticResource ModernComboBoxStyle}" ItemContainerStyle="{StaticResource ModernComboBoxItemStyle}" SelectionChanged="SortComboBox_SelectionChanged">
                            <ComboBoxItem Content="热度" Tag="popularity" IsSelected="True"/>
                            <ComboBoxItem Content="最新" Tag="newest"/>
                            <ComboBoxItem Content="大小(小到大)" Tag="size-asc"/>
                            <ComboBoxItem Content="大小(大到小)" Tag="size-desc"/>
                            <ComboBoxItem Content="名称" Tag="name"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- 模型列表 -->
                    <ListView Grid.Row="1" x:Name="AvailableModelsListView" Margin="10" 
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              Background="White">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="名称" Width="200" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="标签" Width="120" DisplayMemberBinding="{Binding Tags}"/>
                                <GridViewColumn Header="大小" Width="100" DisplayMemberBinding="{Binding Size}"/>
                                <GridViewColumn Header="下载量" Width="100" DisplayMemberBinding="{Binding PullCount}"/>
                                <GridViewColumn Header="热度" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="★" Foreground="Gold"/>
                                                <TextBlock Text="{Binding Popularity}" Margin="5,0,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="操作" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="详情" Width="50" Height="25" Margin="0,0,5,0"
                                                        Background="#F0F0F0" BorderThickness="0" 
                                                        Cursor="Hand" Click="ModelDetailsButton_Click"/>
                                                <Button Content="下载" Width="50" Height="25"
                                                        Background="#4CAF50" Foreground="White" BorderThickness="0" 
                                                        Cursor="Hand" Click="DownloadModelButton_Click"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="10,5"/>
                                <Setter Property="Margin" Value="0,1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F5F5F5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </TabItem>

            <!-- 已下载模型选项卡 -->
            <TabItem Header="已下载">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 操作按钮栏 -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Background="White">
                        <Button x:Name="DeleteModelButton" Content="删除选中" Width="100" Height="35" Margin="0,0,10,0"
                                Background="#F44336" Foreground="White" BorderThickness="0" 
                                Cursor="Hand" Click="DeleteModelButton_Click"/>
                        <Button x:Name="CleanSpaceButton" Content="清理空间" Width="100" Height="35"
                                Background="#FF9800" Foreground="White" BorderThickness="0" 
                                Cursor="Hand" Click="CleanSpaceButton_Click"/>
                        <TextBlock x:Name="TotalSizeTextBlock" Text="总占用空间: " VerticalAlignment="Center" Margin="20,0,0,0"/>
                    </StackPanel>

                    <!-- 已下载模型列表 -->
                    <ListView Grid.Row="1" x:Name="DownloadedModelsListView" Margin="10" 
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              Background="White">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="名称" Width="200" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="大小" Width="100" DisplayMemberBinding="{Binding Size}"/>
                                <GridViewColumn Header="修改日期" Width="150" DisplayMemberBinding="{Binding ModifiedAt}"/>
                                <GridViewColumn Header="参数量" Width="100" DisplayMemberBinding="{Binding ParameterSize}"/>
                                <GridViewColumn Header="上下文长度" Width="100" DisplayMemberBinding="{Binding ContextLength}"/>
                                <GridViewColumn Header="量化方式" Width="100" DisplayMemberBinding="{Binding QuantizationLevel}"/>
                                <GridViewColumn Header="操作" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="使用" Width="50" Height="25" Margin="0,0,5,0"
                                                        Background="#4CAF50" Foreground="White" BorderThickness="0" 
                                                        Cursor="Hand" Click="UseModelButton_Click"/>
                                                <Button Content="详情" Width="50" Height="25" Margin="0,0,5,0"
                                                        Background="#F0F0F0" BorderThickness="0" 
                                                        Cursor="Hand" Click="ModelDetailsButton_Click"/>
                                                <Button Content="删除" Width="50" Height="25"
                                                        Background="#F44336" Foreground="White" BorderThickness="0" 
                                                        Cursor="Hand" Click="DeleteModelButton_Click"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="10,5"/>
                                <Setter Property="Margin" Value="0,1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F5F5F5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- 底部状态栏 -->
        <StatusBar Grid.Row="3" Height="30" Background="#333">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="就绪" Foreground="White"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>